<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.effect.DropShadow?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cms.clubmanagementsystem.controller.TeacherManagementController"
            style="-fx-background-color: #f8f9fa;">

    <!-- Header Section -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Teacher Management"
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
                <effect>
                    <DropShadow color="rgba(0,0,0,0.3)" radius="3" offsetX="2" offsetY="2"/>
                </effect>
            </Label>
            <Label text="Manage all teachers and their club assignments"
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;"/>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: transparent;">
            <VBox spacing="25" style="-fx-padding: 25;">

                <!-- Create Teacher Card -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="➕" style="-fx-font-size: 20px;"/>
                        <Label text="Create New Teacher" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    </HBox>

                    <Separator style="-fx-background-color: #ecf0f1;"/>

                    <HBox alignment="CENTER" spacing="15">
                        <Button text="➕ Create New Teacher" onAction="#handleCreateTeacher"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;"/>
                    </HBox>
                </VBox>

                <!-- Teachers Table Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="👥" style="-fx-font-size: 20px;"/>
                        <Label text="Existing Teachers" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    </HBox>

                    <Separator style="-fx-background-color: #ecf0f1;"/>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Button fx:id="refreshButton" text="🔄 Refresh" onAction="#handleRefresh"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                    </HBox>

                    <TableView fx:id="teachersTable" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7;">
                        <columns>
                            <TableColumn fx:id="nameColumn" text="👤 Name" prefWidth="180">
                                <cellValueFactory><PropertyValueFactory property="fullName"/></cellValueFactory>
                                <style>-fx-alignment: CENTER_LEFT; -fx-font-weight: bold;</style>
                            </TableColumn>
                            <TableColumn fx:id="emailColumn" text="📧 Email" prefWidth="220">
                                <cellValueFactory><PropertyValueFactory property="email"/></cellValueFactory>
                                <style>-fx-alignment: CENTER_LEFT;</style>
                            </TableColumn>
                            <TableColumn fx:id="phoneColumn" text="📞 Phone" prefWidth="140">
                                <cellValueFactory><PropertyValueFactory property="phone"/></cellValueFactory>
                                <style>-fx-alignment: CENTER_LEFT;</style>
                            </TableColumn>
                            <TableColumn fx:id="clubColumn" text="🏫 Club" prefWidth="160">
                                <cellValueFactory><PropertyValueFactory property="clubName"/></cellValueFactory>
                                <style>-fx-alignment: CENTER_LEFT;</style>
                            </TableColumn>

                            <TableColumn fx:id="gradeColumn" text="Grade" />

                            <TableColumn fx:id="statusColumn" text="🔍 Status" prefWidth="100">
                                <cellValueFactory><PropertyValueFactory property="status"/></cellValueFactory>
                                <style>-fx-alignment: CENTER;</style>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>

                    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 15 0 0 0;">
                        <Button fx:id="updateButton" text="✏️ Update" onAction="#handleUpdateTeacher"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"/>

                        <Button fx:id="deactivateButton" text="⏸️ Deactivate" onAction="#handleDeactivateTeacher"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"/>

                        <Button fx:id="activateButton" text="▶️ Activate" onAction="#handleActivateTeacher"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox fx:id="statusContainer" style="-fx-background-color: #34495e; -fx-padding: 10; -fx-alignment: CENTER_LEFT;">
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>