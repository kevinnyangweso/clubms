<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.cms.clubmanagementsystem.controller.RegisterController"
          prefHeight="500" prefWidth="600"
          alignment="TOP_CENTER"
          hgap="10" vgap="10"
          style="-fx-padding: 20;">

    <!-- Column Constraints (for responsive widths) -->
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" minWidth="100" />
        <ColumnConstraints halignment="LEFT" minWidth="300" />
    </columnConstraints>

    <!-- Row 0: Full Name -->
    <Label text="Full Name*:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <!-- Row 1: Email -->
    <Label text="Email*:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <!-- Row 2: Username -->
    <Label text="Username*:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="usernameField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <!-- Row 3: Password -->
    <Label text="Password*:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <PasswordField fx:id="passwordField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <TextField fx:id="passwordVisibleField" GridPane.rowIndex="3" GridPane.columnIndex="1"
               visible="false" managed="false" styleClass="password-visible" />

    <!-- Row 4: Confirm Password -->
    <Label text="Confirm Password*:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <TextField fx:id="confirmPasswordVisibleField" GridPane.rowIndex="4" GridPane.columnIndex="1"
               visible="false" managed="false" styleClass="password-visible" />

    <!-- Row 5: Show Password Checkbox -->
    <CheckBox fx:id="showPasswordCheckBox" text="Show Password"
              onAction="#handleShowPassword"
              GridPane.rowIndex="5" GridPane.columnIndex="1" />

    <!-- Row 6: Phone -->
    <Label text="Phone*:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    <!-- Row 7: School -->
    <Label text="School*:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <ComboBox fx:id="schoolComboBox" GridPane.rowIndex="7" GridPane.columnIndex="1" />

    <!-- Row 8: Role -->
    <Label text="Role*:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
    <ComboBox fx:id="roleComboBox" GridPane.rowIndex="8" GridPane.columnIndex="1" />

    <!-- Row 9: Club Selection (Visible only for teachers) -->
    <VBox fx:id="clubSelectionBox" visible="false" GridPane.rowIndex="9" GridPane.columnIndex="0"
          GridPane.columnSpan="2">
        <Label text="Select Club*:" />
        <ComboBox fx:id="clubComboBox" />
    </VBox>

    <!-- Row 10: Register Button -->
    <Button text="Register" onAction="#handleRegistration"
            GridPane.rowIndex="9" GridPane.columnIndex="1"
            GridPane.halignment="CENTER"
            prefWidth="100" />

    <!-- Row 11: Message Label -->
    <Label fx:id="messageLabel" GridPane.rowIndex="10" GridPane.columnIndex="0"
           GridPane.columnSpan="2" GridPane.halignment="CENTER" />

    <!-- Row 12: Back to Log in Hyperlink -->
    <Hyperlink text="Back to Login" onAction="#handleBackToLogin"
               GridPane.rowIndex="11" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" />

</GridPane>