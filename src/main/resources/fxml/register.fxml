<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cms.clubmanagementsystem.controller.RegisterController"
            prefHeight="500" prefWidth="600">

    <Label layoutX="50" layoutY="30" text="Full Name*:" />
    <TextField fx:id="fullNameField" layoutX="150" layoutY="30" prefWidth="300" />

    <Label layoutX="50" layoutY="70" text="Email*:" />
    <TextField fx:id="emailField" layoutX="150" layoutY="70" prefWidth="300" />

    <Label layoutX="50" layoutY="110" text="Username*:" />
    <TextField fx:id="usernameField" layoutX="150" layoutY="110" prefWidth="300" />

    <Label layoutX="50" layoutY="150" text="Password*:" />
    <PasswordField fx:id="passwordField" layoutX="150" layoutY="150" prefWidth="300" />
    <TextField fx:id="passwordVisibleField" layoutX="150" layoutY="150" prefWidth="300"
               visible="false" managed="false" styleClass="password-visible" />

    <Label layoutX="50" layoutY="190" text="Confirm Password*:" />
    <PasswordField fx:id="confirmPasswordField" layoutX="150" layoutY="190" prefWidth="300" />
    <TextField fx:id="confirmPasswordVisibleField" layoutX="150" layoutY="190" prefWidth="300"
               visible="false" managed="false" styleClass="password-visible" />

    <CheckBox fx:id="showPasswordCheckBox" layoutX="150" layoutY="230" text="Show Password"
              onAction="#handleShowPassword" />

    <Label layoutX="50" layoutY="270" text="Phone*:" />
    <TextField fx:id="phoneField" layoutX="150" layoutY="270" prefWidth="300" />

    <Label layoutX="50" layoutY="310" text="Role*:" />
    <ComboBox fx:id="roleComboBox" layoutX="150" layoutY="310" prefWidth="300" />

    <Label layoutX="50" layoutY="350" text="School*:" />
    <ComboBox fx:id="schoolComboBox" layoutX="150" layoutY="350" prefWidth="300" />

    <Button layoutX="250" layoutY="400" mnemonicParsing="false"
            onAction="#handleRegistration" prefWidth="100" text="Register" />

    <Label fx:id="messageLabel" layoutX="50" layoutY="440" prefWidth="500" />

</AnchorPane>
