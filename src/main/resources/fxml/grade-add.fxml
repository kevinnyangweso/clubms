<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cms.clubmanagementsystem.controller.GradeAddController"
      spacing="10" prefWidth="400" prefHeight="200">

    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Add New Grade" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Separator/>

    <Label text="Grade Name:"/>
    <TextField fx:id="gradeNameField" promptText="Enter grade name (e.g., Grade 10)"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Save" onAction="#handleSave" style="-fx-font-weight: bold;"/>
    </HBox>
</VBox>