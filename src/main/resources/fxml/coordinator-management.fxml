<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cms.clubmanagementsystem.controller.CoordinatorManagementController"
      spacing="20"
      style="-fx-padding: 20;" stylesheets="@../css/styles.css">

    <Label text="Coordinator Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Manage coordinator status. Only one coordinator can be active at a time."
           style="-fx-text-fill: #666; -fx-font-size: 14px;"/>

    <Button fx:id="createButton" text="➕ Create New Coordinator"
            onAction="#handleCreateCoordinator" styleClass="create-button"/>

    <!-- Coordinators Table -->
    <VBox spacing="10">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Coordinators" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"/>
        </HBox>

        <TableView fx:id="coordinatorsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="120"/>
                <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                <TableColumn fx:id="createdColumn" text="Created" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <HBox spacing="10">
            <Button fx:id="activateButton" text="Activate Coordinator" onAction="#handleActivateCoordinator" disable="true"/>
            <Button fx:id="deactivateButton" text="Deactivate Coordinator" onAction="#handleDeactivateCoordinator" disable="true"/>
        </HBox>
    </VBox>

    <!-- Instructions -->
    <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="Instructions:" style="-fx-font-weight: bold;"/>
        <Label text="1. Select a coordinator from the table"/>
        <Label text="2. Click 'Activate Coordinator' to make them the active coordinator"/>
        <Label text="3. Click 'Deactivate Coordinator' to remove their active status"/>
        <Label text="• Only one coordinator can be active at a time"/>
        <Label text="• Activating a coordinator will automatically deactivate the current one"/>
    </VBox>

    <HBox fx:id="statusContainer" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
        <!-- This is where the status label will be added -->
    </HBox>

</VBox>