<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cms.clubmanagementsystem.controller.LearnersTabController"
      spacing="15"
      style="-fx-padding: 20;">

    <!-- Header Section -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="ðŸ‘¥ Learners Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Manage and view all learners enrolled in your club" style="-fx-text-fill: #7f8c8d;"/>
        </VBox>

        <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Statistics Cards -->
    <HBox spacing="20" alignment="CENTER">
        <VBox alignment="CENTER" spacing="5"
              style="-fx-background-color: #f5f5f5; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5; -fx-min-width: 120;">
            <Label text="Total Learners" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
            <Label fx:id="totalLearnersLabel" text="0"
                   style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5"
              style="-fx-background-color: #e8f5e8; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5; -fx-min-width: 120;">
            <Label text="Active Learners" style="-fx-font-weight: bold; -fx-text-fill: #666;"/>
            <Label fx:id="activeLearnersLabel" text="0"
                   style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
        </VBox>
    </HBox>

    <!-- Filters and Search -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Search:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="searchField" promptText="Search by name or admission number..."
                   HBox.hgrow="ALWAYS" style="-fx-pref-width: 300;"/>

        <Label text="Grade:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="gradeFilter" style="-fx-pref-width: 120;"/>

        <Label text="Status:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="statusFilter" style="-fx-pref-width: 120;"/>
    </HBox>

    <!-- Loading Indicator -->
    <VBox fx:id="loadingIndicator" alignment="CENTER" spacing="10"
          style="-fx-padding: 40;" visible="false" managed="false">
        <ProgressIndicator />
        <Label text="Loading learners data..." style="-fx-text-fill: #666;"/>
    </VBox>

    <!-- Content Area -->
    <VBox fx:id="contentArea" spacing="10" VBox.vgrow="ALWAYS">
        <!-- Table -->
        <TableView fx:id="learnersTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="200"/>
                <TableColumn fx:id="admissionNumberColumn" text="Admission Number" prefWidth="150"/>
                <TableColumn fx:id="gradeColumn" text="Grade" prefWidth="100"/>
                <TableColumn fx:id="enrollmentDateColumn" text="Enrollment Date" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="80"/>
            </columns>
        </TableView>

        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="ðŸ“Š View Attendance" onAction="#handleViewAttendance"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="ðŸ“¤ Export Data" onAction="#handleExport"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

</VBox>