<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cms.clubmanagementsystem.controller.LearnerAttendanceDetailController"
      spacing="15"
      style="-fx-padding: 20;">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="ðŸ“Š Learner Attendance Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="learnerNameLabel" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;"/>
        </VBox>
        <Button text="âœ• Close" onAction="#handleClose"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>

    <!-- Learner Information -->
    <GridPane hgap="20" vgap="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 5;">
        <columnConstraints>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="200"/>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="Admission Number:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="admissionNumberLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Grade:" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
        <Label fx:id="gradeLabel" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Enrollment Date:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="enrollmentDateLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
        <Label fx:id="statusLabel" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    </GridPane>

    <!-- Statistics Cards -->
    <HBox spacing="20" alignment="CENTER">
        <VBox alignment="CENTER" spacing="5"
              style="-fx-background-color: #3498db; -fx-padding: 15; -fx-background-radius: 5; -fx-min-width: 120;">
            <Label text="Total Sessions" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label fx:id="totalSessionsLabel" text="0"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5"
              style="-fx-background-color: #27ae60; -fx-padding: 15; -fx-background-radius: 5; -fx-min-width: 120;">
            <Label text="Present" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label fx:id="presentCountLabel" text="0"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5"
              style="-fx-background-color: #e74c3c; -fx-padding: 15; -fx-background-radius: 5; -fx-min-width: 120;">
            <Label text="Absent" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label fx:id="absentCountLabel" text="0"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5"
              style="-fx-background-color: #9b59b6; -fx-padding: 15; -fx-background-radius: 5; -fx-min-width: 120;">
            <Label text="Attendance Rate" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label fx:id="attendanceRateLabel" text="0%"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </HBox>

    <!-- Filters -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Time Period:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="timePeriodFilter" style="-fx-pref-width: 120;"/>

        <Label text="From:" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="fromDatePicker" style="-fx-pref-width: 120;"/>

        <Label text="To:" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="toDatePicker" style="-fx-pref-width: 120;"/>

        <Label text="Status:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="statusFilter" style="-fx-pref-width: 100;"/>

        <Button text="ðŸ“¤ Export" onAction="#handleExportAttendance"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Loading Indicator -->
    <VBox fx:id="loadingIndicator" alignment="CENTER" spacing="10"
          style="-fx-padding: 40;" visible="false" managed="false">
        <ProgressIndicator />
        <Label text="Loading attendance data..." style="-fx-text-fill: #666;"/>
    </VBox>

    <!-- Content Area -->
    <VBox fx:id="contentArea" spacing="15" VBox.vgrow="ALWAYS">
        <!-- Chart -->
        <VBox spacing="10">
            <Label text="Monthly Attendance Trend" style="-fx-font-weight: bold;"/>
            <BarChart fx:id="attendanceChart" prefHeight="200">
                <xAxis>
                    <CategoryAxis fx:id="monthAxis"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="percentageAxis"/>
                </yAxis>
            </BarChart>
        </VBox>

        <!-- Attendance Table -->
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Attendance Sessions" style="-fx-font-weight: bold;"/>
            <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="dayColumn" text="Day" prefWidth="80"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="80"/>
                    <TableColumn fx:id="markedByColumn" text="Marked By" prefWidth="120"/>
                    <TableColumn fx:id="notesColumn" text="Notes" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </VBox>

</VBox>