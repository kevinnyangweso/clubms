<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cms.clubmanagementsystem.controller.ResetPasswordController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Reset Your Password" style="-fx-font-size: 18px;"/>

    <PasswordField fx:id="newPasswordField" promptText="Enter new password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"/>

    <Button text="Submit" onAction="#handleResetPassword"/>
</VBox>
