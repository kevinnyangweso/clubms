<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cms.clubmanagementsystem.controller.ResetPasswordController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: #f9f9f9; -fx-padding: 30;">

    <Label text="Reset Your Password" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="tokenField" promptText="Enter Reset Token" maxWidth="250"/>

    <PasswordField fx:id="newPasswordField" promptText="Enter New Password" maxWidth="250"/>

    <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" maxWidth="250"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Reset Password" onAction="#handleResetPassword"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#handleBackToLogin"
                style="-fx-background-color: #ccc; -fx-text-fill: black;"/>
    </HBox>

</VBox>
