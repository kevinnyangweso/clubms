<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cms.clubmanagementsystem.controller.ResetPasswordController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: #f9f9f9; -fx-padding: 30;">

    <Label text="Reset Your Password" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Label text="Enter the 6-digit code sent to your email"
           style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-padding: 0 0 10 0;"/>

    <!-- Replace the single tokenField with 6 individual text fields -->
    <HBox alignment="CENTER" spacing="5">
        <TextField fx:id="tokenDigit1" styleClass="token-digit" maxWidth="40"
                   onKeyReleased="#handleTokenDigitInput"/>
        <TextField fx:id="tokenDigit2" styleClass="token-digit" maxWidth="40"
                   onKeyReleased="#handleTokenDigitInput"/>
        <TextField fx:id="tokenDigit3" styleClass="token-digit" maxWidth="40"
                   onKeyReleased="#handleTokenDigitInput"/>
        <TextField fx:id="tokenDigit4" styleClass="token-digit" maxWidth="40"
                   onKeyReleased="#handleTokenDigitInput"/>
        <TextField fx:id="tokenDigit5" styleClass="token-digit" maxWidth="40"
                   onKeyReleased="#handleTokenDigitInput"/>
        <TextField fx:id="tokenDigit6" styleClass="token-digit" maxWidth="40"
                   onKeyReleased="#handleTokenDigitInput"/>
    </HBox>

    <PasswordField fx:id="newPasswordField" promptText="Enter New Password" maxWidth="250"/>

    <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" maxWidth="250"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Reset Password" onAction="#handleResetPassword"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#handleBackToLogin"
                style="-fx-background-color: #ccc; -fx-text-fill: black;"/>
    </HBox>

    <Hyperlink text="Not your email? Go back"
               onAction="#handleBackToForgotPassword"/>

</VBox>
