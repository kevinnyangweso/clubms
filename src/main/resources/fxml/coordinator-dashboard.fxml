<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cms.clubmanagementsystem.controller.CoordinatorDashboardController"
            stylesheets="@../css/dashboard.css">

    <!-- Top Header -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15 20;" spacing="20" alignment="CENTER_LEFT">
            <Label text="🎯" style="-fx-font-size: 24px;"/>
            <VBox spacing="2">
                <Label text="Club Management System" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="welcomeLabel" text="Welcome, Coordinator" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;"/>
            </VBox>
            <HBox spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Label fx:id="schoolInfoLabel" text="School: " style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;"/>
                <Button text="🚪 Logout" onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
            </HBox>
        </HBox>
    </top>

    <!-- Left Navigation Menu -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 20 15; -fx-min-width: 200;" alignment="TOP_CENTER">
            <Label text="MAIN MENU" style="-fx-text-fill: #bdc3c7; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>

            <Button fx:id="overviewButton" text="🏠 Overview" onAction="#showOverview" styleClass="nav-button" />
            <Button fx:id="coordinatorManagementButton" text="Coordinator Management" onAction="#showCoordinatorManagement" styleClass="nav-button" />
            <Button fx:id="clubManagementButton" text="🎯 Club Management" onAction="#showClubManagement" styleClass="nav-button" />
            <Button fx:id="teacherManagementButton" text="👨‍🏫 Teacher Management" onAction="#showTeacherManagement" styleClass="nav-button" />

            <!-- Students MenuButton - FIXED with <items> tag -->
            <MenuButton text="📊 Students" styleClass="nav-button">
                <items>
                    <MenuItem text="Import Learners" onAction="#handleImportLearners" />
                    <MenuItem text="Download Template" onAction="#handleDownloadTemplate" />
                    <MenuItem text="View Students" onAction="#handleViewStudents" />
                </items>
            </MenuButton>

            <Button fx:id="attendanceButton" text="📊 Attendance" onAction="#showAttendance" styleClass="nav-button" />
            <Button fx:id="reportsButton" text="📈 Reports &amp; Analytics" onAction="#showReports" styleClass="nav-button" />

            <Separator style="-fx-padding: 20 0;"/>

            <Label text="QUICK STATS" style="-fx-text-fill: #bdc3c7; -fx-font-weight: bold; -fx-padding: 10 0 5 0;"/>
            <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #2c3e50; -fx-background-radius: 5;">
                <Label fx:id="totalClubsLabel" text="Clubs: 0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 11px;"/>
                <Label fx:id="totalTeachersLabel" text="Teachers: 0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 11px;"/>
                <Label fx:id="totalLearnersLabel" text="Learners: 0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 11px;"/>
            </VBox>
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: #ecf0f1;">
            <StackPane fx:id="contentArea" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
                <!-- Modules will be loaded here dynamically -->
                <Label text="Welcome to Club Management System Dashboard"
                       style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
            </StackPane>
        </ScrollPane>
    </center>

</BorderPane>