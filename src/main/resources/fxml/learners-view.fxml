<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cms.clubmanagementsystem.controller.LearnersViewController"
      spacing="15" alignment="TOP_CENTER" prefWidth="900" prefHeight="600" style="-fx-padding: 20;">

    <Label fx:id="titleLabel" text="Learners List" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <Label fx:id="summaryLabel" text="Loading learners..." style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Refresh" onAction="#refreshData"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px;" />
    </HBox>

    <TableView fx:id="learnersTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="300" />
            <TableColumn fx:id="admissionNumberColumn" text="Admission Number" prefWidth="200" />
            <TableColumn fx:id="gradeColumn" text="Grade" prefWidth="150" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#close"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 100px;" />
    </HBox>
</VBox>