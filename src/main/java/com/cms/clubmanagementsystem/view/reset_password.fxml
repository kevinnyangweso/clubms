<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cms.clubmanagementsystem.controller.ResetPasswordController">

    <VBox alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Reset Your Password" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Label text="Enter the token from your email:"/>
        <TextField fx:id="tokenField" promptText="Paste token here" prefWidth="250"/>

        <Label text="New Password:"/>
        <PasswordField fx:id="newPasswordField" promptText="Enter new password" prefWidth="250"/>

        <Label text="Confirm New Password:"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter new password" prefWidth="250"/>

        <Button text="Reset Password"
                onAction="#handleResetPassword"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

        <Label fx:id="messageLabel" textFill="red"/>
    </VBox>
</AnchorPane>
